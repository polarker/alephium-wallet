{
  "description": "Alephium Wallet Extension",
  "manifest_version": 2,
  "name": "alephium",
  "version": "1.0",
  "homepage_url": "https://gitlab.com/alephium/alephium-wallet",
  "icons": {
    "48": "icons/logo-48.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Alephium",
    "default_popup": "index.html"
  },
  "permissions": ["storage"]
}
